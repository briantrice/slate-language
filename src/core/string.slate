  (s indexOfFirstSatisfying: [| :each | (c includes: each) not])
    ifNil: [s new]
    ifNotNilDo:
      [| :from |
       s sliceFrom: from
         to: (s indexOfLastSatisfying: [| :each | (c includes: each) not])]
].

