s@(String traits) stripAll: c@(Collection traits) startingAt: start
[| each |
  result ::= (s copyFrom: 0 to: start - 1) writer.
  start below: s size do:
    [| :index |
     each := s at: index.
     (c includes: each)
	   ifFalse: [result nextPut: each]].
  result contents
].

